<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PNS Consultancy"
        android:textSize="31dp"
        android:textStyle="bold"
        android:gravity="center"
        android:id="@+id/champ"
        android:textColor="#FF6F00"
        app:layout_constraintTop_toBottomOf="@id/pns2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="25dp"
        android:textColor="#FF6F00"
        android:layout_marginTop="12dp"
        android:id="@+id/wel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/champ"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/pns2"
        android:id="@+id/pns2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login to Continue"
        android:textSize="25dp"
        android:textColor="#FF6F00"
        android:layout_marginTop="12dp"
        android:id="@+id/adv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wel"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Email Address"
        android:id="@+id/cemailin"
        android:drawableStart="@drawable/ic_baseline_email_24"
        app:layout_constraintTop_toBottomOf="@id/adv"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Password"
        android:drawableStart="@drawable/ic_baseline_lock_24"
        android:id="@+id/cpassin"
        app:layout_constraintTop_toBottomOf="@id/cemailin"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clogin"
        android:text="Log In"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/role"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Role :"
        android:textSize="24dp"
        android:textColor="#FF6F00"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/role"
        app:layout_constraintTop_toBottomOf="@id/cpassin"
        app:layout_constraintStart_toStartOf="parent"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advisor"
        android:textSize="24dp"
        android:layout_marginLeft="24dp"
        android:textColor="#FF6F00"
        android:id="@+id/adv1"
        app:layout_constraintStart_toEndOf="@id/role"
        app:layout_constraintTop_toBottomOf="@id/cpassin"/>
    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client"
        android:textSize="24dp"
        android:textColor="#FF6F00"
        android:layout_marginRight="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cpassin"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User?"
        android:textColor="#FF6F00"
        android:textSize="24dp"
        android:id="@+id/new_user"
        app:layout_constraintTop_toBottomOf="@id/clogin"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="74dp"
        android:layout_marginTop="30dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toEndOf="@id/new_user"
        app:layout_constraintTop_toBottomOf="@id/clogin"/>



</androidx.constraintlayout.widget.ConstraintLayout>